<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TouchCursor.Forms.UI.Views"
                    xmlns:base="clr-namespace:TouchCursor.Support.UI.Views;assembly=TouchCursor.Support"
                    xmlns:units="clr-namespace:TouchCursor.Support.UI.Units;assembly=TouchCursor.Support"
                    xmlns:mainUnits="clr-namespace:TouchCursor.Main.UI.Units;assembly=TouchCursor.Main"
                    xmlns:loc="clr-namespace:TouchCursor.Support.Localization;assembly=TouchCursor.Support">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/TouchCursor.Support;component/Themes/Views/TouchCursorWindow.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type local:TouchCursorWindow}">
        <Setter Property="Width" Value="700"/>
        <Setter Property="SizeToContent" Value="Height"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#DFDFDF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome CaptionHeight="32"
                              ResizeBorderThickness="5"
                              GlassFrameThickness="0"
                              CornerRadius="0"
                              UseAeroCaptionButtons="False"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:TouchCursorWindow}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Custom Title Bar with Tabs -->
                            <mainUnits:TitleBar Grid.Row="0"
                                Icon="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Icon}"
                                ShowMaximizeButton="False"
                                HelpCommand="{Binding AboutCommand}">
                                <mainUnits:TitleBar.TabContent>
                                    <StackPanel Orientation="Horizontal">
                                        <units:TouchCursorTab x:Name="PART_GeneralTab"
                                                              Content="{loc:Localize SettingsWindow.TabGeneral, Default='General'}"
                                                              GroupName="SettingsTabs"
                                                              IsChecked="True"/>
                                        <units:TouchCursorTab x:Name="PART_KeyMappingsTab"
                                                              Content="{loc:Localize SettingsWindow.TabKeyMappings, Default='Key Mappings'}"
                                                              GroupName="SettingsTabs"/>
                                    </StackPanel>
                                </mainUnits:TitleBar.TabContent>
                            </mainUnits:TitleBar>

                            <!-- Main Content -->
                            <Grid Grid.Row="1" Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Content Region -->
                                <ContentControl Grid.Row="0" x:Name="PART_ContentRegion" Margin="0,0,0,20"/>

                                <!-- Bottom Buttons -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="{loc:Localize SettingsWindow.ResetToDefaults, Default='Reset to Defaults'}"
                                            Width="150" Height="30" Margin="0,0,10,0"
                                            Command="{Binding ResetToDefaultsCommand}"/>
                                    <Button Content="{loc:Localize SettingsWindow.OK, Default='OK'}"
                                            Width="80" Height="30" Margin="0,0,10,0"
                                            Command="{Binding SaveCommand}"/>
                                    <Button Content="{loc:Localize SettingsWindow.Cancel, Default='Cancel'}"
                                            Width="80" Height="30"
                                            Command="{Binding CancelCommand}"/>
                                </StackPanel>

                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
