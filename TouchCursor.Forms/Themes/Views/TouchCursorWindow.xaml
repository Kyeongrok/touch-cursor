<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TouchCursor.Forms.UI.Views"
                    xmlns:base="clr-namespace:TouchCursor.Support.UI.Views;assembly=TouchCursor.Support"
                    xmlns:loc="clr-namespace:TouchCursor.Support.Localization;assembly=TouchCursor.Support">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/TouchCursor.Support;component/Themes/Views/TouchCursorWindow.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Tab Button Style -->
    <Style x:Key="TabButtonStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#666"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderThickness="0,0,0,2"
                            BorderBrush="Transparent"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Foreground" Value="#1976D2"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter TargetName="border" Property="BorderBrush" Value="#1976D2"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:TouchCursorWindow}">
        <Setter Property="Width" Value="700"/>
        <Setter Property="SizeToContent" Value="Height"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#DFDFDF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome CaptionHeight="32"
                              ResizeBorderThickness="5"
                              GlassFrameThickness="0"
                              CornerRadius="0"
                              UseAeroCaptionButtons="False"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:TouchCursorWindow}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Custom Title Bar -->
                            <Grid Grid.Row="0" Background="#F0F0F0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <Image Grid.Column="0"
                                       Source="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Icon}"
                                       Width="16" Height="16" Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>

                                <!-- Title -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Title}"
                                           VerticalAlignment="Center" Margin="8,0,0,0"
                                           FontSize="12" Foreground="#333"/>

                                <!-- Window Buttons -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <Button x:Name="PART_MinimizeButton"
                                            Style="{StaticResource WindowButtonStyle}"
                                            Content="&#xE921;"/>
                                    <Button x:Name="PART_MaximizeButton"
                                            Style="{StaticResource WindowButtonStyle}"
                                            Content="&#xE922;"/>
                                    <Button x:Name="PART_CloseButton"
                                            Style="{StaticResource CloseButtonStyle}"
                                            Content="&#xE8BB;"/>
                                </StackPanel>
                            </Grid>

                            <!-- Menu Bar -->
                            <Menu Grid.Row="1" Background="#F5F5F5">
                                <MenuItem Header="{loc:Localize Menu.Settings, Default='_Settings'}">
                                    <MenuItem Header="환경설정..."
                                              Command="{Binding ShowSettingsCommand}"/>
                                </MenuItem>
                                <MenuItem Header="{loc:Localize Menu.Help, Default='_Help'}">
                                    <MenuItem Header="{loc:Localize Menu.About, Default='_About...'}"
                                              Command="{Binding AboutCommand}"/>
                                </MenuItem>
                            </Menu>

                            <!-- Main Content -->
                            <Grid Grid.Row="2" Margin="20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Tab Buttons -->
                                <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <RadioButton x:Name="PART_GeneralTab"
                                                     Content="{loc:Localize SettingsWindow.TabGeneral, Default='General'}"
                                                     Style="{StaticResource TabButtonStyle}"
                                                     GroupName="SettingsTabs"
                                                     IsChecked="True"/>
                                        <RadioButton x:Name="PART_KeyMappingsTab"
                                                     Content="{loc:Localize SettingsWindow.TabKeyMappings, Default='Key Mappings'}"
                                                     Style="{StaticResource TabButtonStyle}"
                                                     GroupName="SettingsTabs"/>
                                    </StackPanel>
                                </Border>

                                <!-- Content Region -->
                                <ContentControl Grid.Row="1" x:Name="PART_ContentRegion" Margin="0,0,0,20"/>

                                <!-- Bottom Buttons -->
                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="{loc:Localize SettingsWindow.ResetToDefaults, Default='Reset to Defaults'}"
                                            Width="150" Height="30" Margin="0,0,10,0"
                                            Command="{Binding ResetToDefaultsCommand}"/>
                                    <Button Content="{loc:Localize SettingsWindow.OK, Default='OK'}"
                                            Width="80" Height="30" Margin="0,0,10,0"
                                            Command="{Binding SaveCommand}"/>
                                    <Button Content="{loc:Localize SettingsWindow.Cancel, Default='Cancel'}"
                                            Width="80" Height="30"
                                            Command="{Binding CancelCommand}"/>
                                </StackPanel>

                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
