<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:TouchCursor.Main.UI.Views"
                    xmlns:vm="clr-namespace:TouchCursor.Main.ViewModels">

    <Style TargetType="{x:Type views:SettingsWindow}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:SettingsWindow}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <TextBlock Grid.Row="0"
                                       Text="{TemplateBinding HeaderText}"
                                       FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                            <!-- Tab Control -->
                            <TabControl Grid.Row="1" Margin="0,0,0,20">
                                <!-- General Tab -->
                                <TabItem Header="{TemplateBinding GeneralTabHeader}">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel Margin="10">
                                            <!-- Activation Key Profiles -->
                                            <GroupBox Header="Activation Key Profiles" Margin="0,0,0,15">
                                                <StackPanel Margin="10">
                                                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                                        Manage multiple activation keys, each with their own key mappings:
                                                    </TextBlock>
                                                    <ListBox x:Name="PART_ActivationKeyProfilesListBox"
                                                             Height="120" Margin="0,0,0,10"
                                                             ItemsSource="{Binding ActivationKeyProfiles}"
                                                             SelectedItem="{Binding SelectedActivationKeyProfile}">
                                                        <ListBox.ItemTemplate>
                                                            <DataTemplate DataType="{x:Type vm:ActivationKeyProfileViewModel}">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="{Binding KeyName}" Width="150" FontWeight="Bold"/>
                                                                    <TextBlock Text="{Binding MappingCount, StringFormat='({0} mappings)'}" Foreground="Gray"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ListBox.ItemTemplate>
                                                    </ListBox>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="Add Profile..." Width="100" Margin="0,0,5,0"
                                                                Command="{Binding AddActivationKeyProfileCommand}"/>
                                                        <Button Content="Remove Profile" Width="120"
                                                                Command="{Binding RemoveActivationKeyProfileCommand}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </GroupBox>

                                            <!-- Behavior -->
                                            <GroupBox Header="Behavior" Margin="0,0,0,15">
                                                <StackPanel Margin="10">
                                                    <CheckBox Content="Enable TouchCursor"
                                                              IsChecked="{Binding IsEnabled}" Margin="0,5"/>
                                                    <CheckBox Content="Training Mode"
                                                              IsChecked="{Binding TrainingMode}" Margin="0,5"/>
                                                    <CheckBox Content="Run at Windows startup"
                                                              IsChecked="{Binding RunAtStartup}" Margin="0,5"/>
                                                    <CheckBox Content="Show icon in notification area"
                                                              IsChecked="{Binding ShowInTray}" Margin="0,5"/>
                                                    <CheckBox Content="Automatically check for updates"
                                                              IsChecked="{Binding CheckUpdates}" Margin="0,5"/>
                                                    <CheckBox Content="Beep for mistakes in training mode"
                                                              IsChecked="{Binding BeepForMistakes}" Margin="0,5"/>
                                                    <CheckBox Content="Enable Typing Analytics"
                                                              IsChecked="{Binding TypingAnalyticsEnabled}" Margin="0,5"/>
                                                    <CheckBox Content="Auto-switch to English (Korean IME)"
                                                              IsChecked="{Binding AutoSwitchToEnglish}" Margin="0,5"/>

                                                    <Separator Margin="0,10"/>

                                                    <!-- Hold Delay -->
                                                    <TextBlock Text="Activation Key Hold Delay (ms):" Margin="0,5,0,5"/>
                                                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,5" FontSize="11" Foreground="Gray">
                                                        The activation key must be held for this duration before cursor mode activates.
                                                    </TextBlock>
                                                    <Grid Margin="0,5,0,10">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Slider Grid.Column="0" Minimum="0" Maximum="300"
                                                                TickFrequency="10" IsSnapToTickEnabled="True"
                                                                Value="{Binding HoldDelayMs}" Margin="0,0,10,0"/>
                                                        <TextBlock Grid.Column="1" Width="50" VerticalAlignment="Center"
                                                                   Text="{Binding HoldDelayMs, StringFormat='{}{0} ms'}"/>
                                                    </Grid>

                                                    <!-- Rollover Threshold -->
                                                    <TextBlock Text="Rollover Detection Threshold (ms):" Margin="0,5,0,5"/>
                                                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,5" FontSize="11" Foreground="Gray">
                                                        Keys pressed within this time after the activation key are treated as normal typing.
                                                    </TextBlock>
                                                    <Grid Margin="0,5">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Slider Grid.Column="0" Minimum="0" Maximum="200"
                                                                TickFrequency="10" IsSnapToTickEnabled="True"
                                                                Value="{Binding RolloverThresholdMs}" Margin="0,0,10,0"/>
                                                        <TextBlock Grid.Column="1" Width="50" VerticalAlignment="Center"
                                                                   Text="{Binding RolloverThresholdMs, StringFormat='{}{0} ms'}"/>
                                                    </Grid>
                                                </StackPanel>
                                            </GroupBox>

                                            <!-- Language -->
                                            <GroupBox Header="Language" Margin="0,0,0,15">
                                                <StackPanel Margin="10">
                                                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                                        Select your preferred language:
                                                    </TextBlock>
                                                    <ComboBox Width="200" HorizontalAlignment="Left"
                                                              ItemsSource="{Binding AvailableLanguages}"
                                                              DisplayMemberPath="NativeName"
                                                              SelectedValuePath="Code"
                                                              SelectedValue="{Binding SelectedLanguage}"/>
                                                </StackPanel>
                                            </GroupBox>

                                            <!-- About -->
                                            <GroupBox Header="About" Margin="0,0,0,15">
                                                <StackPanel Margin="10">
                                                    <TextBlock Margin="0,5"><Bold>TouchCursor for Windows</Bold></TextBlock>
                                                    <TextBlock Margin="0,5">Version: 2.0.0 (C# Edition)</TextBlock>
                                                    <TextBlock Margin="0,5">Ported from original TouchCursor by Martin Stone</TextBlock>
                                                    <TextBlock Margin="0,5">Licensed under GNU GPL v3.0</TextBlock>
                                                </StackPanel>
                                            </GroupBox>
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>

                                <!-- Key Mappings Tab -->
                                <TabItem Header="{TemplateBinding KeyMappingsTabHeader}">
                                    <Grid Margin="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" FontWeight="Bold" Margin="0,0,0,10">
                                            Current Key Mappings
                                        </TextBlock>

                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                                            <TextBlock Text="Activation Key:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <ComboBox Width="200"
                                                      ItemsSource="{Binding ActivationKeyProfiles}"
                                                      DisplayMemberPath="KeyName"
                                                      SelectedValuePath="VkCode"
                                                      SelectedValue="{Binding SelectedActivationKeyForMappings}"/>
                                        </StackPanel>

                                        <TextBlock Grid.Row="2" TextWrapping="Wrap" Margin="0,0,0,15" Foreground="Gray">
                                            Click on a mapping and use the buttons below to edit or remove it.
                                        </TextBlock>

                                        <DataGrid x:Name="PART_KeyMappingsDataGrid" Grid.Row="3"
                                                  AutoGenerateColumns="False"
                                                  GridLinesVisibility="All"
                                                  HeadersVisibility="Column"
                                                  SelectionMode="Single"
                                                  ItemsSource="{Binding KeyMappings}"
                                                  SelectedItem="{Binding SelectedKeyMapping}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Activation Key +" Width="150"
                                                                    Binding="{Binding SourceKey}" IsReadOnly="True"/>
                                                <DataGridTextColumn Header="Maps To" Width="150"
                                                                    Binding="{Binding TargetKey}" IsReadOnly="True"/>
                                                <DataGridCheckBoxColumn Header="Ignore Rollover" Width="120"
                                                                        Binding="{Binding IgnoreRollover, UpdateSourceTrigger=PropertyChanged}"/>
                                                <DataGridTextColumn Header="Description" Width="*"
                                                                    Binding="{Binding Description}" IsReadOnly="True"/>
                                            </DataGrid.Columns>
                                        </DataGrid>

                                        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,10,0,0">
                                            <Button Content="Add..." Width="80" Margin="0,0,5,0"
                                                    Command="{Binding AddKeyMappingCommand}"/>
                                            <Button Content="Edit..." Width="80" Margin="0,0,5,0"
                                                    Command="{Binding EditKeyMappingCommand}"/>
                                            <Button Content="Remove" Width="80"
                                                    Command="{Binding RemoveKeyMappingCommand}"/>
                                        </StackPanel>
                                    </Grid>
                                </TabItem>

                                <!-- Program Lists Tab -->
                                <TabItem Header="{TemplateBinding ProgramListsTabHeader}">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel Margin="10">
                                            <TextBlock FontWeight="Bold" Margin="0,0,0,10">
                                                Program-Specific Settings
                                            </TextBlock>
                                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15" Foreground="Gray">
                                                Configure which programs TouchCursor should be enabled or disabled in.
                                            </TextBlock>

                                            <!-- Disable Progs -->
                                            <GroupBox Header="Disable in these programs" Margin="0,0,0,15">
                                                <StackPanel Margin="10">
                                                    <ListBox x:Name="PART_DisableProgsListBox" Height="150" Margin="0,0,0,10"
                                                             ItemsSource="{Binding DisableProgs}"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="Add..." Width="80" Margin="0,0,5,0"
                                                                Command="{Binding AddDisableProgCommand}"/>
                                                        <Button Content="Remove" Width="80"
                                                                Command="{Binding RemoveDisableProgCommand}"
                                                                CommandParameter="{Binding SelectedItem, ElementName=PART_DisableProgsListBox}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </GroupBox>

                                            <!-- Enable Progs -->
                                            <GroupBox Header="Enable only in these programs" Margin="0,0,0,15">
                                                <StackPanel Margin="10">
                                                    <CheckBox Content="Use enable list (TouchCursor will only work in listed programs)"
                                                              IsChecked="{Binding UseEnableList}" Margin="0,0,0,10"/>
                                                    <ListBox x:Name="PART_EnableProgsListBox" Height="150" Margin="0,0,0,10"
                                                             ItemsSource="{Binding EnableProgs}"
                                                             IsEnabled="{Binding UseEnableList}"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="Add..." Width="80" Margin="0,0,5,0"
                                                                Command="{Binding AddEnableProgCommand}"
                                                                IsEnabled="{Binding UseEnableList}"/>
                                                        <Button Content="Remove" Width="80"
                                                                Command="{Binding RemoveEnableProgCommand}"
                                                                CommandParameter="{Binding SelectedItem, ElementName=PART_EnableProgsListBox}"
                                                                IsEnabled="{Binding UseEnableList}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </GroupBox>
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>
                            </TabControl>

                            <!-- Bottom Buttons -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Reset to Defaults" Width="120" Height="30" Margin="0,0,10,0"
                                        Command="{Binding ResetToDefaultsCommand}"/>
                                <Button Content="OK" Width="80" Height="30" Margin="0,0,10,0"
                                        Command="{Binding SaveCommand}"/>
                                <Button Content="Cancel" Width="80" Height="30"
                                        Command="{Binding CancelCommand}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
