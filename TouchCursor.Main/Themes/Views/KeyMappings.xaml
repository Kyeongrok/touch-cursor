<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:TouchCursor.Main.UI.Views"
                    xmlns:units="clr-namespace:TouchCursor.Main.UI.Units"
                    xmlns:vm="clr-namespace:TouchCursor.Main.ViewModels"
                    xmlns:loc="clr-namespace:TouchCursor.Main.Localization">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/TouchCursor.Support;component/Themes/Units/ScrollViewer.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type views:KeyMappings}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:KeyMappings}">
                    <ScrollViewer Style="{StaticResource ModernScrollViewer}"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Activation Key Profiles -->
                        <units:ActivationKeyProfilesControl Grid.Row="0"
                            ActivationKeyProfiles="{Binding ActivationKeyProfiles}"
                            SelectedActivationKeyProfile="{Binding SelectedActivationKeyProfile}"
                            AddActivationKeyProfileCommand="{Binding AddActivationKeyProfileCommand}"
                            RemoveActivationKeyProfileCommand="{Binding RemoveActivationKeyProfileCommand}"
                            Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="1" Text="{loc:Localize SettingsWindow.KeyMappingsNote}"
                                   TextWrapping="Wrap" Margin="0,0,0,15" Foreground="Gray"/>

                        <DataGrid x:Name="PART_KeyMappingsDataGrid" Grid.Row="2"
                                  AutoGenerateColumns="False"
                                  GridLinesVisibility="All"
                                  HeadersVisibility="Column"
                                  SelectionMode="Single"
                                  ItemsSource="{Binding KeyMappings}"
                                  SelectedItem="{Binding SelectedKeyMapping}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="{loc:Localize SettingsWindow.ColumnActivationKey}" Width="150"
                                                    Binding="{Binding SourceKey}" IsReadOnly="True"/>
                                <DataGridTextColumn Header="{loc:Localize SettingsWindow.ColumnMapsTo}" Width="150"
                                                    Binding="{Binding TargetKey}" IsReadOnly="True"/>
                                <DataGridCheckBoxColumn Header="{loc:Localize SettingsWindow.ColumnIgnoreRollover}" Width="120"
                                                        Binding="{Binding IgnoreRollover, UpdateSourceTrigger=PropertyChanged}"/>
                                <DataGridTextColumn Header="{loc:Localize SettingsWindow.ColumnDescription}" Width="*"
                                                    Binding="{Binding Description}" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Content="{loc:Localize SettingsWindow.AddMapping}" Width="80" Margin="0,0,5,0"
                                    Command="{Binding AddKeyMappingCommand}"/>
                            <Button Content="{loc:Localize SettingsWindow.EditMapping}" Width="80" Margin="0,0,5,0"
                                    Command="{Binding EditKeyMappingCommand}"/>
                            <Button Content="{loc:Localize SettingsWindow.RemoveMapping}" Width="80"
                                    Command="{Binding RemoveKeyMappingCommand}"/>
                        </StackPanel>
                    </Grid>
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
