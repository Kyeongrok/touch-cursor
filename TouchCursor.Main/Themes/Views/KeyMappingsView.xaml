<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:TouchCursor.Main.UI.Views"
                    xmlns:vm="clr-namespace:TouchCursor.Main.ViewModels"
                    xmlns:loc="clr-namespace:TouchCursor.Main.Localization">

    <Style TargetType="{x:Type views:KeyMappingsView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:KeyMappingsView}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="{loc:Localize SettingsWindow.CurrentKeyMappings}"
                                   FontWeight="Bold" Margin="0,0,0,10"/>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="{loc:Localize SettingsWindow.SelectActivationKey}"
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Width="200"
                                      ItemsSource="{Binding ActivationKeyProfiles}"
                                      DisplayMemberPath="KeyName"
                                      SelectedValuePath="VkCode"
                                      SelectedValue="{Binding SelectedActivationKeyForMappings}"/>
                        </StackPanel>

                        <TextBlock Grid.Row="2" Text="{loc:Localize SettingsWindow.KeyMappingsNote}"
                                   TextWrapping="Wrap" Margin="0,0,0,15" Foreground="Gray"/>

                        <DataGrid x:Name="PART_KeyMappingsDataGrid" Grid.Row="3"
                                  AutoGenerateColumns="False"
                                  GridLinesVisibility="All"
                                  HeadersVisibility="Column"
                                  SelectionMode="Single"
                                  ItemsSource="{Binding KeyMappings}"
                                  SelectedItem="{Binding SelectedKeyMapping}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="{loc:Localize SettingsWindow.ColumnActivationKey}" Width="150"
                                                    Binding="{Binding SourceKey}" IsReadOnly="True"/>
                                <DataGridTextColumn Header="{loc:Localize SettingsWindow.ColumnMapsTo}" Width="150"
                                                    Binding="{Binding TargetKey}" IsReadOnly="True"/>
                                <DataGridCheckBoxColumn Header="{loc:Localize SettingsWindow.ColumnIgnoreRollover}" Width="120"
                                                        Binding="{Binding IgnoreRollover, UpdateSourceTrigger=PropertyChanged}"/>
                                <DataGridTextColumn Header="{loc:Localize SettingsWindow.ColumnDescription}" Width="*"
                                                    Binding="{Binding Description}" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Content="{loc:Localize SettingsWindow.AddMapping}" Width="80" Margin="0,0,5,0"
                                    Command="{Binding AddKeyMappingCommand}"/>
                            <Button Content="{loc:Localize SettingsWindow.EditMapping}" Width="80" Margin="0,0,5,0"
                                    Command="{Binding EditKeyMappingCommand}"/>
                            <Button Content="{loc:Localize SettingsWindow.RemoveMapping}" Width="80"
                                    Command="{Binding RemoveKeyMappingCommand}"/>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
