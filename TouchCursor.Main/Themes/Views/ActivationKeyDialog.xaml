<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:TouchCursor.Main.UI.Views">

    <Style TargetType="{x:Type views:ActivationKeyDialog}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:ActivationKeyDialog}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="새 프로파일의 활성화 키를 선택하세요:"
                                       Margin="0,0,0,10"/>

                            <ComboBox Grid.Row="1"
                                      x:Name="PART_KeyComboBox"
                                      Height="28"/>

                            <StackPanel Grid.Row="3"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <Button x:Name="PART_OkButton"
                                        Content="확인"
                                        Width="80" Height="28"
                                        Margin="0,0,10,0"/>
                                <Button x:Name="PART_CancelButton"
                                        Content="취소"
                                        Width="80" Height="28"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
