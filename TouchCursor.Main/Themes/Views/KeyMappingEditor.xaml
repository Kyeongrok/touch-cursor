<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:TouchCursor.Main.UI.Views"
                    xmlns:vm="clr-namespace:TouchCursor.Main.ViewModels">

    <Style TargetType="{x:Type views:KeyMappingEditor}">
        <Setter Property="Focusable" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:KeyMappingEditor}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Source Key Section -->
                            <GroupBox Grid.Row="0" Header="Source Key" Margin="0,0,0,20" Padding="5">
                                <StackPanel Margin="10">
                                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                        Press the key you want to map (while holding the activation key):
                                    </TextBlock>
                                    <Border BorderBrush="Gray" BorderThickness="1" Padding="15,10" Background="White" Margin="0,0,0,10">
                                        <TextBlock Text="{Binding SourceKeyDisplay}" FontWeight="Bold" FontSize="14"/>
                                    </Border>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Width="120" Height="30" Margin="0,5,5,0"
                                                Command="{Binding CaptureSourceKeyCommand}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Content" Value="Capture Key..."/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCapturingSource}" Value="True">
                                                            <Setter Property="Content" Value="Press a key..."/>
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <TextBlock Text="or" VerticalAlignment="Center" Margin="5,5,5,0"/>
                                        <ComboBox Width="150" Height="30" Margin="5,5,0,0"
                                                  ItemsSource="{Binding SourceKeys}"
                                                  SelectedItem="{Binding SelectedSourceKey}"
                                                  DisplayMemberPath="Name"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>

                            <!-- Target Key Section -->
                            <GroupBox Grid.Row="1" Header="Target Key" Margin="0,0,0,20" Padding="5">
                                <StackPanel Margin="10">
                                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                        Press the key you want it to be mapped to:
                                    </TextBlock>
                                    <Border BorderBrush="Gray" BorderThickness="1" Padding="15,10" Background="White" Margin="0,0,0,10">
                                        <TextBlock Text="{Binding TargetKeyDisplay}" FontWeight="Bold" FontSize="14"/>
                                    </Border>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Width="120" Height="30" Margin="0,5,5,0"
                                                Command="{Binding CaptureTargetKeyCommand}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Content" Value="Capture Key..."/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCapturingTarget}" Value="True">
                                                            <Setter Property="Content" Value="Press a key..."/>
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <TextBlock Text="or" VerticalAlignment="Center" Margin="5,5,5,0"/>
                                        <ComboBox Width="150" Height="30" Margin="5,5,0,0"
                                                  ItemsSource="{Binding TargetKeys}"
                                                  SelectedItem="{Binding SelectedTargetKey}"
                                                  DisplayMemberPath="Name"/>
                                    </StackPanel>

                                    <!-- Modifier Keys -->
                                    <TextBlock TextWrapping="Wrap" Margin="0,15,0,5" FontWeight="SemiBold">
                                        Modifier Keys:
                                    </TextBlock>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <CheckBox Content="Ctrl" Margin="0,0,15,0" IsChecked="{Binding CtrlModifier}"/>
                                        <CheckBox Content="Alt" Margin="0,0,15,0" IsChecked="{Binding AltModifier}"/>
                                        <CheckBox Content="Shift" Margin="0,0,15,0" IsChecked="{Binding ShiftModifier}"/>
                                        <CheckBox Content="Win" Margin="0,0,0,0" IsChecked="{Binding WinModifier}"/>
                                    </StackPanel>
                                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,5" Foreground="Gray" FontSize="11">
                                        Select modifier keys to combine with the target key (e.g., Ctrl+C, Shift+Delete)
                                    </TextBlock>
                                </StackPanel>
                            </GroupBox>

                            <!-- Description Section -->
                            <GroupBox Grid.Row="2" Header="Description (Optional)" Margin="0,0,0,20" Padding="5">
                                <StackPanel Margin="10">
                                    <TextBox Height="70" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                             TextWrapping="Wrap" AcceptsReturn="True"
                                             VerticalScrollBarVisibility="Auto" Padding="5"/>
                                </StackPanel>
                            </GroupBox>

                            <!-- Buttons -->
                            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="OK" Width="80" Height="30" Margin="0,0,10,0"
                                        Command="{Binding OkCommand}"/>
                                <Button Content="Cancel" Width="80" Height="30"
                                        Command="{Binding CancelCommand}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
